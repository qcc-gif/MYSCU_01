<!-- pages/login/login.wxml -->
<view>
  <view class="box-login">
    <view class="input">
      <van-cell-group>
        <van-field model:value="{{ studentnumber }}" clearable label="账号" placeholder="请输入账号" error-message="{{stuerrmsg}}" />
        <van-field model:value="{{ pwd }}" clearable label="密码" placeholder="请输入密码" error-message="{{pwderrmsg}}" border="{{ false }}" />
      </van-cell-group>
    </view>
    <view class="tips">注：忘记密码可通过教务处重置。</view>
    <view class="btn">
      <van-button bind:click="loginIn">登录</van-button>
    </view>
  </view>
  {{studentnumber}}
  {{pwd}}
</view>