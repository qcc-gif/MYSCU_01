/* pages/post/post.wxss */
.box {
    width: 90%;
    margin-left: 5%;
    box-sizing: border-box;
    border: 2rpx solid #ccc;
    border-radius: 20rpx;
    margin-top:25rpx;
}

.position {
    display: flex;
    padding-top:10rpx;
}

.po-icon {
    width: 5%;
    text-align: center;
}

.pos-tab {
    width: 95%
}

.detail-pos {
    display: flex;
    flex-wrap: wrap;
    padding: 10rpx;
}

.box-pos {
    height: 40rpx;
    line-height: 40rpx;
    padding: 10rpx 30rpx;
    border: 2rpx solid #ccc;
    border-radius: 30rpx;
    margin: 20rpx 20rpx;
}

.edit {
    height: 300rpx;
}

.label {
    padding-bottom: 30rpx;
}

.count {
    padding-left: 80%;
    color: #444;
    margin: 10rpx 0;
}

.icon {
    display: flex;
}

.icon view{
    margin: 5rpx 15rpx;
}

.label-detai {
    margin: 10rpx;
    margin-left: 20rpx;
}

.lable-btn {
    display: flex;
    flex-wrap: wrap;
    padding: 10rpx;
}

.label-button {
    height: 40rpx;
    line-height: 40rpx;
    padding: 10rpx 30rpx;
    border: 2rpx solid #ccc;
    border-radius: 30rpx;
    margin: 20rpx 20rpx;
}