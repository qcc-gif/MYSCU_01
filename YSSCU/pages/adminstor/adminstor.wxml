<!-- pages/adminstor/adminstor.wxml -->
<view class="main">
    <view class="bg-top"></view>
    <view class="user">
        <view class="pic-avtor ">
            <van-image round width="100%" height="100%" src="{{imgUrl}}" />
            <!-- <open-data type="userAvatarUrl" class="pic"></open-data> -->
        </view>
        <view class="name">
            <!-- <open-data type="userNickName"></open-data> -->
            {{name}}
        </view>
    </view>
    <view class="menu">
        <van-grid column-num="2">
            <van-grid-item icon="manager-o" text="举报管理" />
            <van-grid-item icon="friends-o" text="账号管理" />
            <van-grid-item icon="chat-o" info="99+" text="消息通知" />
            <van-grid-item icon="envelop-o" text="贴子管理" />
        </van-grid>
    </view>
    <view class="exit">
        <van-icon name="close" size="30" bindtap="exitLogin" />
    </view>

</view>
 <van-dialog id="van-dialog" />