.main {
    position: relative;
    background: url("https://s3.bmp.ovh/imgs/2021/11/63e7ebdf25bc9462.jpg") no-repeat;
    opacity: 80%;
}

.bg-top {
    width: 100%;
    height: 600rpx;
    border: 2rpx solid #ccc;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.user {                          
    height: 200rpx;
    position: absolute;
    top: 40%;
    left: 5%;
}

.name {
    font-size: 42rpx;
    font-weight: 550;
    text-align: center;
    margin-left: 250rpx;
    margin-top: -130rpx;
    color: #ffffff;
    /* background-color: rgb(255, 255, 255); */
}

.pic-avtor {
    width: 200rpx;
    height: 200rpx;
    border: 5rpx solid rgb(253, 248, 248);
    border-radius: 50%;
    overflow: hidden;
}

.pic {
    width: 100%;
    height: 100%;

}
.menu {
    position: absolute;
    box-sizing: border-box;
    top: 77%;
    width: 90%;                                                    
    height: 400rpx;
    left: 5%;
    border: 2rpx solid #ccc;
    border-radius: 20rpx;
    padding: 3%;
}

.exit {
    position: absolute;
    top:5%;
    right: 5%;
    color: white;
}