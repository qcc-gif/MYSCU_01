/* pages/reportManage/reportManage.wxss */
.flex-wrp{
    display: flex;
  }
  .flex-tab{
    flex-flow: row nowrap;
    justify-content: space-around;
    align-items: stretch;
  }
  .flex-item{
    flex-grow: 1;
    text-align: center;
  }
  .top-tab{
    width: 750rpx;
    height: 100rpx;
    background: #298DE5;
    color: #8CCEFD;
    font-size: 28rpx;
    line-height: 100rpx;
    box-shadow: 0 2px 2px #bebebe;
    margin: 0 0 8rpx 0;
    top: 0;
    z-index: 9999;
  }
  .toptab.active{
    color: #ffffff;
    border-bottom: solid 2px #ffffff;
  }
  
  .article_item{
    width: 100%;
    background-color: #ffffff;
    border-width: 0rpx 0rpx 9rpx 0rpx;
    border-color: rgb(235, 235, 235);
    border-style: solid;
  
  }
  
  .article_title{
    padding: 30rpx;
    font-size: large;
    font-weight: 700;
    color: #000000;
  }
  
  .divLine{
    background: #ebebeb;
    width: 100%;
    height: 5rpx;
   }
  
   .article_content{
     margin-left: 30rpx;
     font-size: medium;
     color: #3E3E3E;
     margin-bottom: 20rpx;
  
    display: -webkit-box;       
    overflow: hidden;
    -webkit-box-orient: vertical;  
    -webkit-line-clamp: 3;
   }
  
   .article_foot{
     display: flex;
     flex-direction: row;
     margin-left: 30rpx;
     color: #7F7F7F;
     font-size: smaller;
   }
  
   .date{
     width: 89%;
   }
  
   .icon{
     width: 11%;
     margin-bottom: 10rpx;
   }
  
  
   
  
  