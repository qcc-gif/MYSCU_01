<!--pages/reportManage/reportManage.wxml-->
<!-- 顶部导航栏 -->
<view class="top-tab flex-wrp flex-tab " >
  <view class="toptab flex-item {{currentNavtab==idx ? 'active' : ''}}" wx:for="{{navTab}}" wx:for-index="idx" wx:for-item="itemName" data-idx="{{idx}}" bindtap="switchTab">
    {{itemName}}
  </view>
</view>

<!-- 帖子组件内容 -->
 <scroll-view  wx:if="{{currentNavtab==0}}"scroll-y="true" class="main-box"style="height: 1340rpx;" >
  <!-- 这里填写组件 -->
  <view class="ctnt0" hidden="{{currentNavtab==0 ? '' : true}}"wx:for="{{postList}}"wx:key="index" style="width: 750rpx; height: 334rpx; display: block; box-sizing: border-box">
    <myreport  postId="{{item.pid}}"
               reason="{{item.reason}}"
               profilePhoto="{{item.profilePhoto}}"
               name="{{item.name}}"
               studentNumber="{{item.studentNumber}}"
               time="{{item.time}}"
               detail="{{item.detail}}">
    </myreport>
</view>

</scroll-view>


  <!-- 评论组件内容 -->
  <scroll-view wx:else scroll-y="true" class="main-box"style="height: 1340rpx;" >
    <!-- 这里填写组件 -->
    <view class="ctnt0" hidden="{{currentNavtab==1 ? '' : true}}"wx:for="{{commentList}}"wx:key="index" style="width: 750rpx; height: 334rpx; display: block; box-sizing: border-box">
    <commentReport  commentId="{{item.cid}}"
               reason="{{item.reason}}"
               profilePhoto="{{item.simgurl}}"
               name="{{item.name}}"
               studentNumber="{{item.studentNumber}}"
               time="{{item.time}}"
               photo="{{item.profilePhoto}}"
               detail="{{item.detail}}">
    </commentReport>
</view>
</scroll-view>
