<!-- pages/post/post.wxml -->
<view class="main">
    <view class="position box">
        <view class="po-icon">
            <van-icon name="location-o" color="#606262" size="25" />
        </view>
        <view class="pos-tab">
            <van-tabs type="card" color='#56C5EF' title-inactive-color='#606262' active="{{ active }}" bind:change="onChangeTab">
                <van-tab title="教学楼区">
                    <view class="detail-pos">
                        <view class="box-pos  {{pos_i==0 && pos_j==index?'isActive':''}}" wx:for="{{pos[0]}}" wx:key="index" data-i="0" data-j="{{index}}" 
                        bindtap="choosePos">
                            {{item}}
                        </view>
                    </view>
                </van-tab>
                <van-tab title="宿舍区">
                    <view class="detail-pos">
                        <view class="box-pos" wx:for="{{pos[1]}}" wx:key="index" data-i="1" data-j="{{index}}" bindtap="choosePos">
                            {{item}}
                        </view>
                    </view>
                </van-tab>
                <van-tab title="餐厅区">
                    <view class="detail-pos">
                        <view class="box-pos" wx:for="{{pos[2]}}" wx:key="index" data-i="2" data-j="{{index}}" bindtap="choosePos">
                            {{item}}
                        </view>
                    </view>
                </van-tab>
                <van-tab title="运动区">
                    <view class="detail-pos">
                        <view class="box-pos" wx:for="{{pos[3]}}" wx:key="index" data-i="3" data-j="{{index}}" bindtap="choosePos">
                            {{item}}
                        </view>
                    </view>
                </van-tab>
            </van-tabs>
        </view>
    </view>
    <view class="edit box">
        <van-cell-group>
            <van-field model:value="{{ msg }}"  type="textarea" placeholder="请分享你的故事" adjust-position size="small" maxlength="500"/>
        </van-cell-group>
        <view class="count">{{msg.length}}/500</view>
    </view>

    <view class="icon">
        <view>
            <van-icon name="photo-o" size="20" />
        </view>
        <view>
            <van-icon name="smile-comment-o" size="20" />
        </view>
        <view>
            <van-icon name="guide-o" size="20" />
        </view>
        <view>
            <van-icon name="smile-comment-o" size="30" />
        </view>
        <view class="last-icon" style="margin-left: 160rpx;">
            <van-icon name="guide-o" size="30" />
        </view>
    </view>
    <view class="label box">
        <view class="label-choice">
            <van-icon color="#33333" name="label-o"/>
            <view>选择其他标签(可选)</view>
        </view>

        <viwe class="lable-btn">
            <view class="label-button {{otherJ == index ? 'isActive': ''}}" wx:for="{{label}}" wx:key="index" data-j="{{index}}" bindtap="chooseLabel">
                {{item}}
            </view>
        </viwe>
    </view>
</view>