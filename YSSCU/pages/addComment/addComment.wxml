<!--pages/addComment/addComment.wxml-->
<view class="main">
    <view class="edit box">
        <view class="textarea-wrp">
            <textarea bindinput="GetMsg" auto-focus="true" adjust-position style="height: 8em"  placeholder="请分享你的看法" maxlength="60" />
        </view>
        <view class="count">{{ptext.length}}/60</view>
    </view>

    <view class="icon">
        <view><van-icon wx:if='{{!imgFilePath}}' name="photo-o" size="70" color='#bfbfbf' bind:click='browse'/> </view>
        <van-image wx:if='{{imgFilePath}}' class="img" slot="loading" width="70" height="70" src="{{imgFilePath}}" bindlongpress="deleteImage"/>
        <view class="last-icon" style="margin-left: 160rpx;" bindtap="onClickSend">
            <van-icon name="guide-o" color='#009FFF' size="30" />
        </view>
    </view>
</view>