<!--pages/addComment/addComment.wxml-->
<view class="main">
<view class="edit box">
        <!-- <textarea bindblur="bindTextAreaBlur" auto-height placeholder="请分享你的校园生活" /> -->
        <van-field model:value="{{ msg }}"  type="textarea" placeholder="请分享你的校园生活" adjust-position autosize maxlength="120" show-word-limit bind:input="GetMsg">
        </van-field>
        <!-- <view class="count">{{msg.length}}/120</view> -->
    </view>
    <view class="icon">
        <view><van-icon name="photo-o" size="30" color='#009FFF' bind:click='browse'/> </view>
        <van-image wx:if='{{imgFilePath}}' class="img" slot="loading" width="100" height="100" src="{{imgFilePath}}" bindlongpress="deleteImage"/>
        <view class="last-icon" style="margin-right: 30rpx;" bindtap="onClickSend">
            <van-icon name="guide-o" color='#009FFF' size="30" />
        </view>
    </view>
</view>