<view class="main">
    <view class="top" style="width: 656rpx; height: 108rpx; display: flex; box-sizing: border-box">
        <view class="pic-avtor">
            <van-image style="margin-left: 10rpx;"round size="80%"width="80%" height="80%" src="{{profilePhoto}}" />
        </view>
        <view class="desc">
            <view class="nameBox">
            <view class="name">{{name}}</view>
            </view>
             <view class="position">{{position1}}â€¢{{position2}}</view>
        </view>
    </view>
    <view bindtap="fullDetails">
    <view class="title">{{title}}</view>
    <text class="post"space="nbsp">{{detail}}</text>
    </view>
    <view class="btn-box">
        <view class="time">{{time}}</view>
        <view class="btn"catchtap="thumb">
            <van-icon wx:if="{{thumbStatus}}"name="thumb-circle" />
            <van-icon wx:else name="thumb-circle"color="red" />
            <view>{{thumbnum}}</view>
        </view>
        <view class="btn"catchtap="chat">
            <van-icon name="chat" />
            <view>{{chatnum}}</view>
        </view>
        <view class="btn"catchtap="share">
            <van-icon name="share" />
            <view>{{sharenum}}</view>
        </view>
        <view class="btn"catchtap="star">
            <van-icon wx:if="{{starStatus}}"name="star" />
            <van-icon wx:else name="star"color="red" />
            <view>{{starnum}}</view>
        </view>
    </view>
</view>